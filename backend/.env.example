PORT=5000
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
# Firebase: use JSON (cloud) OR path (local)
# FIREBASE_SERVICE_ACCOUNT_JSON={"type":"service_account",...}
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json
# Optional: for scripts/test-auth-e2e.js (Firebase Console > Project Settings > General > Web API Key)
# FIREBASE_WEB_API_KEY=

# Admin web app: plain password or bcrypt hash (run: node scripts/hash-admin-password.js <pwd>)
ADMIN_PASSWORD=admin123

# Session secret for admin cookies (use strong random string in production)
SESSION_SECRET=change-me-to-random-string

# Optional: Postgres connection string for persistent sessions (Supabase: Project Settings > Database > Connection string)
# Without this, sessions use memory (lost on restart). Required for production on Render.
# DATABASE_URL=postgresql://postgres.[ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# CORS (comma-separated origins, default: http://localhost:3000)
# CORS_ORIGINS=http://localhost:3000,https://your-admin.com

# Optional
# NODE_ENV=production
# LOG_LEVEL=info
